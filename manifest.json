{
  "manifest_version": 2,
  "name": "Pokemon Timer",
  "version": "1.1",

  "description": "Shows pokemon timer under twitch chat.",

  "icons": {
    "48": "icons/pokeball.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["pokemon.js"]
    }
  ],

  "permissions": [
    "https://pokemonapi.dikkeboktor.nl/*",
    "tabs",
    "http://localhost:13000/*"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "pokemon@marijnregterschot.nl"
    }
  }
  
}
